        <div id="toolbar" class="authenticated content" style="width: 100%;">

            &nbsp;
            <img src="../../Content/icons/white/add.png" data-bind="click: CreateCatalog" class="action" title="New Collection" width="32" height="32" />
            <img src="../../Content/icons/white/edit.png" data-bind="click: EditCatalog" class="action" title="Edit Collection" width="32" height="32" />
            <img src="../../Content/icons/white/delete.png" data-bind="click: DeleteCatalog" class="action" title="Delete Collection" width="32" height="32" />



            <img src="~/Content/icons/white/add.png" data-bind="click: AddItem" class="action" style="margin-left: 50px;" title="New Item" />
            <img src="~/Content/icons/white/delete.png" class="action" title="Delete Item(s)"  />
            
            <img src="~/Content/icons/white/friends.png" onclick="ToggleFriends();" title="View/Hide Friends" class="action" style="float: right; margin-right: 8px;" />

            <img src="~/Content/icons/white/sort.png" onclick="ToggleListOptions(this);" title="View sort and list options" class="action" style="float: right; margin-right: 8px;" />
            
            <div id="listOptions" style="float: right;">
                <div class="balloon"><img src="../../Content/balloon.png" /></div><div class="options">
                List Type:
                <select size="2">
                    <option>Details</option>
                    <option>Thumbnails</option>
                </select>
                <br />
                Sort By:
                <select size="10">
                    <option>Name</option>
                    <option>Added</option>
                    <option>Rating</option>
                </select><br />
                <select size="2">
                    <option>Ascending</option>
                    <option>Descending</option>
                </select>

                    </div>
            </div>

            <input type="range" id="thumbnailSize" onchange="ThumbnailRender();" min="32" max="256" value="128" step="8" style="float: right; margin-right: 8px;" />


        </div>

    </header>


    <div id="content" class="authenticated content stretch" style="clear: both;">
        <div id="left-sidebar" class="stretch">

            
            <div class="margin" style="margin-right: 0px;">
                <ul class="catalogsList" data-bind="foreach: Catalogs">
                    <li class="button" data-bind="click: $parent.SelectCatalog, css: { selected: $data == $root.SelectedCatalog() }">
                        <span data-bind="text: Name"></span>
                        <span data-bind="text: Count" style="float: right;"></span>
                    </li>
                </ul>
            </div>

        </div>

             <div id="friends" class="stretch">
                <div id="friendlist" data-bind="foreach: Friends">
                    <div>
                        <a href="#" data-bind="attr: { title: Name }">
                            <img data-bind="attr: { src: ImageUrl, title: Name }" /><span data-bind="text: Name"></span>
                        </a>
                    </div>
                </div>
                <div id="friendfeed">
                    <div><img src="../../Content/friend.jpg" /> John Doe added "The Matrix"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                    <div><img src="../../Content/friend.jpg" /> John Doe added "New Years Eve"</div>
                </div>
            </div>

        <div id="main-content" class="stretch">


            
            <div class="margin">
                @RenderBody()
            </div>



        </div>
       
    </div>

    <div id="anonymous" class="anonymous content-box stretch">
        <p>&nbsp;</p>
        <img src="~/Content/drop_box256x256.png" />
        @Html.Raw(Text.AnonymousWelcomeText)
    </div>

    <div class="initializing content-box stretch">
        <p>&nbsp;</p>
        @Text.Initializing...
    </div>
    
        <div id="settings" class="stretchFull settings">
            <div>
            <h1>Settings</h1>

                <p>
                    Privacy:<br />
                   <input type="checkbox" checked id="shareActivity" />
                    <label for="shareActivity">Share my activity on InTheBoks Social</label>
                </p>
                <p>
                    Language:<br />
                    <select>
                        <option>Auto-detect</option>
                        <option>English</option>
                        <option>Norwegian</option>
                    </select>
                </p>
                <p>
                    <img onclick="ToggleSettings();" class="action big" title="Save" src="../../Content/icons/white/save.png" />
                    &nbsp;<img onclick="ToggleSettings();" class="action big" title="Cancel" src="../../Content/icons/white/cancel.png" />
                </p>
            </div>
        </div>

        <div id="search" class="stretchFull search">

            <a class="backButton" href="#" title="Go Back" onclick="ToggleSearch();"><img src="../../Content/icons/white/back.png"  class="action huge" /></a>

            <div id="searchContent">


            <h1 data-bind="with: SelectedCatalog">Add New Items to "<span data-bind="text: Name"></span>"</h1>
                <p><input type="search" data-bind="value: SearchTerm" style="font-size: 1.6em; padding: 6px;" placeholder="Keyword or Barcode" />
                    <button data-bind="click: Search">Search</button>
                    <button>Scan Barcode with webcam</button>
                </p>
                
                <div data-bind="visible: Results().length > 0">
                Search Results:<br />
                <div class="thumbnails" data-bind="foreach: Results">


                      <div class="wrapper">  
                        <img data-bind="attr: { src: ImageUrl, title: Title }" src="../../Content/albums/41A-jqYmLiL.jpg" />  
                        <div class="description">  
                            <p class="description_content"><strong data-bind="text: Title">The Matrix</strong> (2000)</p>  
                        </div>
                    </div>  

                        @*<span><img data-bind="attr: { src: ImageUrl, title: Title }, click: $parent.SelectResult, css: { picked: Selected }" /></span>*@

                </div>
                    <br />

                    </div>
            </div>
            <div id="searchTasks">
                <div style="padding: 12px 20px 12px 20px;">
                    
                <div style="float: right;">
                <img title="Save Selected Item(s)" class="action huge" src="../../Content/icons/white/save.png" />
                <br />Save selected item(s)
                </div>

                <div style="float: left;">
                <img src="~/Content/icons/white/cancel.png" class="action huge" /><br />
                Clear selection
                </div>


                    @*<div style="float: right; text-align: center;">
                    <img onclick="ToggleSearch();" class="action huge" title="Cancel" src="../../Content/icons/white/cancel.png" />
                    <br />
                    </div>*@
                    </div>
            </div>
        </div>

        <footer id="footer" class="authenticated">
           @* <div>
           Status:
            <div id="log"></div>
                </div>*@
        </footer>

        <div id="notificationDialog" style="
            background-color: white;
            color: black;
            height: 84px;
            border: 2px solid gray;
            position: absolute;
            top: 10px;
            right: 10px;
            width: 370px;
            font-size: 1.2em;
            display: none;
            opacity: 0.95;
            ">
            <div style="padding: 10px;">

            The collection was saved.
                </div>
        </div>

        <div data-bind="with: SelectedObject" id="confirmationDialog" 
            style="background-color: white; 
top: 25%; position: absolute; 
border: 2px solid black; 
opacity: 0;
padding: 15px;
display: none;
color: Black;
width: 450px;">
            <div style="padding: 30px;">
            <h1>Are you sure you want to delete the collection "<span data-bind="text: Name"></span>" and all it's items?
                </h1>
            <p>
                <button>&nbsp;OK&nbsp;</button>
                <button onclick="HideConfirmationDialog();">Cancel</button>
            </p>
                </div>
        </div>

        <div id="propertiesDialog" data-bind="with: SelectedObject" style="display: none; width: 0px; background-color:#dedede; color: gray; position: absolute; top: 0px; right: 0px; bottom: 0px;">
            
            <div style="width: 300px;">
            <div style="background-color: gray; height: 80px;">
                <div style="padding-top: 26px; padding-left: 30px; color: white; font-size: 2em;">
                    <a class="backButtonProperties" href="#" title="Go Back" onclick="HideProperties();"><img src="../../Content/icons/white/back.png" class="action" style="vertical-align: middle;" /></a>
                    
                    <span data-bind="text: $parent.SelectedAction"></span>

                </div>
            </div>
            <div>
                <div style="padding-left: 30px;">
                <p>Name</p>
                <p><input type="text" data-bind="value: Name" placeholder="Enter name" /></p>
                    <p>Visibility</p>
                    <p><select>
                        <option>Private</option>
                        <option>Friends</option>
                        <option>Public</option>
                       </select></p>
                <p>
                    <button data-bind="click:$parent.SaveCatalog">Save</button>
                </p>
                    </div>
            </div>
                </div>
        </div>




